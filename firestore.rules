rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isSignedIn() && getUserData().role == 'admin';
    }
    
    function isCoach() {
      return isSignedIn() && getUserData().role == 'coach';
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin() || isCoach());
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    // Coaches collection
    match /coaches/{coachId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Classes collection
    match /classes/{classId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isCoach();
      
      // Attendees subcollection
      match /attendees/{attendeeId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
    }

    // Reservations collection
    match /reservations/{resId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Notifications and other settings
    match /notifications/{docId} {
      allow read, write: if isSignedIn();
    }
    
    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
